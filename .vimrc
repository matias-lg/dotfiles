set nu
set rnu
syntax on

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set smartindent
set nowrap

set hlsearch
set incsearch

set ignorecase
set smartcase

set laststatus=3

set splitbelow
set splitright

set signcolumn="yes"
set scrolloff=5
set fileencoding="utf-8"

set mouse="a"
set clipboard="unnamedplus"

set pumheight=7
